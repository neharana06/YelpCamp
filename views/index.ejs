<% include partials/header %>

<div class="container">
<header class ="jumbotron">
<div class="container">
<h1><strong>Welcome to YelpCamp!</strong></h1>
<p>View our hand-picked campgrounds from all over the world</p>
<p>
<a class="btn btn-primary btn-lg"href="/campnew">Add new Campground</a>
</p>
</div>
</header>
<p>
<h4><strong>Our Most Popular Campgrounds!</strong></h4>
</p>
<div class="container">
<div class="row text-center" style="display:flex; flex-wrap:wrap;">
<% camp.forEach(function(data){%>
<div class="col-md-4">
<div class="thumbnail">
  <img src="<%= data["image"] %>">
<div class="caption"> 
<h4><strong><%=  data.name %></strong></h4>
</div>
<p>
<a href="/campgrounds/<%= data._id %>" class="btn btn-primary">More Info</a> 
</p>
</div>
</div>
<% }); %>
</div>
</div>
<% include partials/footer %>


