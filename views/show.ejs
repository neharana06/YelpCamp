<% include partials/header %>
<div class="container">
<div class="row">
<div class="col-md-3">
<p class="lead">YelpCamp</p>
<div class="list-group">
<li class="list-group-item active">Info 1</li>
<li class="list-group-item">Info 2</li>
<li class="list-group-item">Info 3</li>
</div>
</div>
<div class="col-md-9">
<div class="thumbnail">
<img class="img-responsive" src="<%= campground.image %>">
<div class="caption-full">
<h4 class="pull-right"><strong>Rs.500/night</strong></h4>
<h1><strong><a><%= campground.name %></strong></a></h1>
<p><%= campground.description %></p>
</div>
</div>
<div class="well">
<div class="text-right">
<a href="/campgrounds/<%= campground._id %>/comments/new" class="btn btn-success">Add Comment</a>
</div>
<hr>
<% campground.comment.forEach(function(data){ %>
<div class="row">
<div class="col-md-12">
<strong><%= data.author %></strong>
<span class="pull-right">10 days ago</span>
 <p>
  <%= data.text %>
 </p>
</div>
</div>
 

<% }); %>
</div>
</div>
</div>

</div>


<p>

</p>

